<Project>
  <!-- Import parent Directory.Build.props -->
  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../'))" />

  <PropertyGroup>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>

  <!-- NOTE: Test helpers (compiled-route-test-helper.cs, lexer-test-helper.cs) are NOT included globally
       because they depend on internal types that aren't accessible when tests reference timewarp-nuru.csproj.
       These helpers are included explicitly in ci-tests/Directory.Build.props for multi-mode testing. -->

  <ItemGroup>
    <!-- Global usings for test files -->
    <Using Include="System.ComponentModel.DataAnnotations" />
    <Using Include="Microsoft.Extensions.DependencyInjection" />
    <Using Include="Microsoft.Extensions.Options" />
    <Using Include="Microsoft.Extensions.Configuration" />
    <Using Include="System.Net" />
  </ItemGroup>
</Project>
