<Project>
  <PropertyGroup>
    <!-- Enable globbing for runfile discovery -->
    <EnableDefaultCompileItems>true</EnableDefaultCompileItems>
    <RunfileGlobbingEnabled>true</RunfileGlobbingEnabled>
  </PropertyGroup>

  <ItemGroup>
    <!-- Include all .cs files recursively for endpoint discovery -->
    <Compile Include="**/*.cs" Exclude="obj/**/*;bin/**/*" />
  </ItemGroup>

  <!-- Reference to TimeWarp.Nuru -->
  <ItemGroup>
    <ProjectReference Include="../../../source/timewarp-nuru/timewarp-nuru.csproj" />
  </ItemGroup>
</Project>
