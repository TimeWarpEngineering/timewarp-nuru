<Project>
  <!-- Import parent Directory.Build.props -->
  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../'))" />

  <ItemGroup>
    <!-- Reference the Repl project -->
    <ProjectReference Include="$(MSBuildThisFileDirectory)../../source/timewarp-nuru-repl/timewarp-nuru-repl.csproj" />
    <Using Include="TimeWarp.Nuru.Repl" />
  </ItemGroup>

  <ItemGroup>
    <!-- Include tab completion test helpers for all REPL tests -->
    <Compile Include="$(MSBuildThisFileDirectory)tab-completion/completion-test-helpers.cs" Link="Shared/completion-test-helpers.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- Static using for tab completion test helpers -->
    <Using Include="TimeWarp.Nuru.Tests.TabCompletion.CompletionAssertions" Static="true" />
    <Using Include="TimeWarp.Nuru.Tests.TabCompletion.KeySequenceHelpers" Static="true" />
    <Using Include="TimeWarp.Nuru.Tests.TabCompletion.TestAppFactory" Static="true" />
  </ItemGroup>
</Project>
