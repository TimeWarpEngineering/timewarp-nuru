    <Compile Include="../timewarp-nuru-repl-tests/repl-03b-history-security.cs" />
    <Compile Include="../timewarp-nuru-repl-tests/repl-04-history-persistence.cs" />
    <Compile Include="../timewarp-nuru-repl-tests/repl-05-console-input.cs" />
