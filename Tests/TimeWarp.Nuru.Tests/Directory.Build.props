<Project>
  <!-- Import parent Directory.Build.props -->
  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../'))"/>

  <ItemGroup>
    <!-- Include lexer test helper only for this project -->
    <Compile Include="$(MSBuildThisFileDirectory)Lexer/LexerTestHelper.cs" Link="Shared/LexerTestHelper.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- Static using for lexer test helper -->
    <Using Include="TimeWarp.Nuru.Tests.Lexer.LexerTestHelper" Static="true" />
  </ItemGroup>
</Project>
