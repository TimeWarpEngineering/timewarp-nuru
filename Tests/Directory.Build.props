<Project>
  <!-- Import parent Directory.Build.props -->
  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../'))" />

  <PropertyGroup>
    <!-- Suppress localization warnings for test projects -->
    <NoWarn>$(NoWarn);CA1303;CA1307;CA2007;CA1031</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <!-- Make Shouldly available for all test projects -->
    <PackageReference Include="Shouldly" />
    <Using Include="Shouldly" />
  </ItemGroup>
</Project>