<Project Sdk="Microsoft.NET.Sdk">
  <!--
    Sandbox sourcegen helpers for #242-step-3
    Agent: Amina
    
    Evaluating two approaches for segment conversion:
    1. FromSyntax - uses internal Syntax types (full fidelity, requires InternalsVisibleTo)
    2. FromCompiledRoute - uses public CompiledRoute (loses option type constraints)
    
    Run tests: dotnet run - -project sandbox/sourcegen/sourcegen.csproj
  -->

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <AssemblyName>TimeWarp.Nuru.SourceGen.Sandbox</AssemblyName>
  </PropertyGroup>

  <!-- Reference parsing project (has InternalsVisibleTo for this assembly) -->
  <ItemGroup>
    <ProjectReference Include="../../source/timewarp-nuru-parsing/timewarp-nuru-parsing.csproj" />
  </ItemGroup>

  <!-- 
    Note: Design-time model types are copied into models/ rather than referencing
    timewarp-nuru-analyzers because:
    1. The model types are internal in the analyzers project
    2. We want to keep this sandbox isolated
    3. The types are simple records that are easy to copy
  -->

</Project>
