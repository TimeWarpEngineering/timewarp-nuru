<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Independent versioning - not tied to Nuru version -->
    <Version>1.0.0-beta.1</Version>
    <AssemblyName>TimeWarp.Builder</AssemblyName>
    <RootNamespace>TimeWarp.Builder</RootNamespace>
    <Description>Fluent builder interfaces and scope extensions for TimeWarp projects</Description>
    <PackageTags>fluent;builder;pattern;extensions;scope;timewarp</PackageTags>

    <!-- AOT Compatibility -->
    <IsAotCompatible>true</IsAotCompatible>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <EnableAotAnalyzer>true</EnableAotAnalyzer>
  </PropertyGroup>

  <ItemGroup>
    <None Include="readme.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
