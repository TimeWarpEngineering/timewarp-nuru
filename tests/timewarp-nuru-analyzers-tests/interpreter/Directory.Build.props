<Project>
  <!-- Import parent to get test infrastructure (Jaribu, Shouldly, etc.) -->
  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../'))" />

  <!-- Reference analyzer as a regular assembly (NOT as analyzer) to access public types -->
  <ItemGroup>
    <ProjectReference Include="../../../source/timewarp-nuru-analyzers/timewarp-nuru-analyzers.csproj">
      <ReferenceOutputAssembly>true</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>
</Project>
